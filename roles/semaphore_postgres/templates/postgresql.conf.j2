# PostgreSQL configuration for Semaphore
# Generated by Ansible semaphore_postgres role

# Data Directory
data_directory = '/var/lib/postgresql/{{ semaphore_postgres_version }}/main'

# Connection Settings
listen_addresses = '{{ semaphore_postgres_listen_addresses }}'
max_connections = {{ semaphore_postgres_max_connections }}

# Memory Configuration
shared_buffers = {{ semaphore_postgres_shared_buffers }}
work_mem = {{ semaphore_postgres_work_mem }}
maintenance_work_mem = {{ semaphore_postgres_maintenance_work_mem }}
effective_cache_size = {{ semaphore_postgres_effective_cache_size }}

# Logging
log_line_prefix = '{{ semaphore_postgres_log_line_prefix }}'
log_statement = '{{ semaphore_postgres_log_statement }}'
logging_collector = {{ semaphore_postgres_logging_collector | lower }}

# SSL
ssl = {{ semaphore_postgres_ssl_mode == 'require' | lower }}